{
  "kind": "collectionType",
  "collectionName": "sites",
  "info": {
    "singularName": "site",
    "pluralName": "sites",
    "displayName": "Site",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "domain": {
      "type": "string"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "mainColor": {
      "type": "string",
      "regex": "^#(?:[0-9a-fA-F]{3}){1,2}$"
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category"
    },
    "facebook_url": {
      "type": "string",
      "regex": "^(https?|ftp):\\/\\/[^\\s/$.?#].[^\\s]*$"
    },
    "twitter_url": {
      "type": "string",
      "regex": "^(https?|ftp):\\/\\/[^\\s/$.?#].[^\\s]*$"
    }
  }
}
